<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="br.com.movietalks.simplebottomnavigationfragments.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/blogFragment"
        android:name="br.com.movietalks.simplebottomnavigationfragments.view.fragment.BlogFragment"
        android:label="blog_fragment"
        tools:layout="@layout/blog_fragment" >
        <action
            android:id="@+id/action_blogFragment_to_blogDetailFragment"
            app:destination="@id/blogDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/blogDetailFragment"
        android:name="br.com.movietalks.simplebottomnavigationfragments.view.fragment.BlogDetailFragment"
        android:label="blog_detail_fragment"
        tools:layout="@layout/blog_detail_fragment" />
    <fragment
        android:id="@+id/chapterFragment"
        android:name="br.com.movietalks.simplebottomnavigationfragments.view.fragment.ChapterFragment"
        android:label="chapter_fragment"
        tools:layout="@layout/chapter_fragment" />
    <fragment
        android:id="@+id/storeFragment"
        android:name="br.com.movietalks.simplebottomnavigationfragments.view.fragment.StoreFragment"
        android:label="store_fragment"
        tools:layout="@layout/store_fragment" />
</navigation>